<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="20dp"
    android:layout_marginStart="15dp"
    android:layout_marginEnd="15dp"
    app:cardElevation="15dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/urun_adi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ürün Adı"
            android:textSize="20sp"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textColor="@color/colorPrimary"/>

        <ImageView
            android:id="@+id/urun_resmi"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_below="@+id/urun_adi"
            android:scaleType="centerCrop"
            android:layout_marginTop="5dp"
            />

        <TextView
            android:id="@+id/urun_fiyati"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ürün Fiyatı"
            android:textSize="16sp"
            android:textAlignment="center"
            android:textColor="@color/colorPrimary"
            android:layout_below="@+id/urun_resmi"/>

        <TextView
            android:id="@+id/urun_tanimi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ürün Tanımı"
            android:textSize="16sp"
            android:layout_marginTop="20dp"
            android:textAlignment="center"
            android:textColor="@color/colorPrimary"
            android:layout_below="@+id/urun_resmi"/>



    </RelativeLayout>

</android.support.v7.widget.CardView>