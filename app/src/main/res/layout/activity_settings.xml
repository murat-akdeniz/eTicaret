<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SettingsActivity">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/app_bar_settings"
        android:layout_height="50dp"
        android:layout_width="match_parent"
        android:background="@color/colorPrimary"
        >
        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar_settings"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/kapat_settings"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Kapat"
                    android:textColor="@android:color/white"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_alignParentStart="true"

                    />
                <TextView
                    android:id="@+id/guncelle_settings"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Güncelle"
                    android:textColor="@android:color/white"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_alignParentEnd="true"
                    android:layout_marginRight="15dp"
                    />

            </RelativeLayout>

        </android.support.v7.widget.Toolbar>

    </android.support.design.widget.AppBarLayout>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/settings_profile_image"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:src="@drawable/profile"
        android:layout_below="@id/app_bar_settings"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true">

    </de.hdodenhof.circleimageview.CircleImageView>

    <TextView
        android:id="@+id/profile_degistir_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Profil resmini değistir"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        android:layout_marginTop="20dp"
        android:textStyle="bold"
        android:layout_below="@+id/settings_profile_image"
        android:layout_centerHorizontal="true"

        />
    <EditText
        android:id="@+id/settings_telefonNo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/profile_degistir_image"
        android:hint="Telefon numaranız..."
        android:textSize="20sp"
        android:layout_margin="20dp"
        android:padding="10dp"/>
    <EditText
        android:id="@+id/settings_adSoyad"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/settings_telefonNo"
        android:hint="Ad ve Soyadınız..."
        android:textSize="20sp"
        android:layout_margin="20dp"
        android:padding="10dp"
        />
    <EditText
        android:id="@+id/settings_adres"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/settings_adSoyad"
        android:hint="Adresiniz..."
        android:textSize="20sp"
        android:layout_margin="20dp"
        android:padding="10dp"
        />


</RelativeLayout>