<?xml version="1.0" encoding="UTF-8"?>

    <RelativeLayout
    tools:context=".AdminYeniUrunEkleActivity"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:android="http://schemas.android.com/apk/res/android">

    <ImageView
        android:layout_height="250dp"
        android:layout_width="300dp"
        android:layout_marginTop="50dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/camera"
        android:scaleType="centerCrop"
        android:cropToPadding="false"
        android:id="@+id/urun_resmi_sec"/>

    <EditText
        android:id="@+id/urun_adi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/urun_resmi_sec"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="49dp"
        android:layout_marginRight="45dp"
        android:background="@drawable/input_design"
        android:hint="Ürün Adı..."
        android:inputType="textMultiLine"
        android:padding="20dp" />

    <EditText
        android:id="@+id/urun_tanimi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/urun_adi"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="7dp"
        android:layout_marginRight="45dp"
        android:background="@drawable/input_design"
        android:hint="Ürün Tanımı..."
        android:inputType="textMultiLine"
        android:padding="20dp" />

    <EditText
        android:id="@+id/urun_fiyati"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/urun_tanimi"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="45dp"
        android:background="@drawable/input_design"
        android:hint="Ürünü Fiyatı..."
        android:inputType="textMultiLine"
        android:padding="20dp" />

    <Button
        android:id="@+id/yeni_urun_ekle_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/urun_fiyati"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="41dp"
        android:layout_marginRight="45dp"
        android:background="@color/colorPrimary"
        android:padding="17dp"
        android:text="Yeni Ürün Ekle"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textSize="18sp" />

</RelativeLayout>